{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Property Price Across Building Construction Years",
    "width": 575,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/world_real_estate.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "average",
                    "field": "price_in_USD",
                    "as": "average_price"
                }
            ],
            "groupby": [
                "building_construction_year"
            ]
        }
    ],
    "mark": {
        "type": "line",
        "point": true,
        "color": "darkblue"
    },
    "encoding": {
        "x": {
            "field": "building_construction_year",
            "type": "ordinal",
            "title": "Building Construction Year"
        },
        "y": {
            "field": "average_price",
            "type": "quantitative",
            "title": "Average Price (USD)"
        },
        "tooltip": [
            {
                "field": "building_construction_year",
                "type": "ordinal",
                "title": "Building Construction Year"
            },
            {
                "field": "average_price",
                "type": "quantitative",
                "title": "Average Price (USD)",
                "format": ".0f"
            }
        ]
    }
}