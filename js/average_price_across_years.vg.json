{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": [
            "Average Property Price of a House and Number of Listings",
            "Across Property Construction Years"
        ],
        "fontSize": 18
    },
    "width": 600,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/average_price_per_house_across_years.csv",
        "format": {
            "parse": {
                "year": "date:'%Y'"
            }
        }
    },
    "layer": [
        {
            "mark": {
                "type": "rect",
                "color": "orange"
            },
            "data": {
                "values": [
                    {
                        "start": "2024",
                        "end": "2028",
                        "event": "Predicted"
                    }
                ],
                "format": {
                    "parse": {
                        "start": "date:'%Y'",
                        "end": "date:'%Y'"
                    }
                }
            },
            "encoding": {
                "x": {
                    "field": "start",
                    "timeUnit": "year"
                },
                "x2": {
                    "field": "end",
                    "timeUnit": "year"
                }
            }
        },
        {
            "mark": {
                "type": "bar",
                "color": "mediumturquoise",
                "size": 10
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "ordinal",
                    "title": "Property Construction Year"
                },
                "y": {
                    "field": "count",
                    "type": "quantitative",
                    "title": "Number of Listings",
                    "axis": {
                        "titleColor": "mediumturquoise"
                    }
                },
                "tooltip": [
                    {
                        "field": "year",
                        "timeUnit": "year",
                        "title": "Property Construction Year"
                    },
                    {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Number of Listings"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "line",
                "point": {
                    "filled": true,
                    "size": 100
                },
                "color": "darkblue"
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "ordinal",
                    "title": "Property Construction Year"
                },
                "y": {
                    "field": "price",
                    "type": "quantitative",
                    "title": "Average Price (USD)",
                    "axis": {
                        "titleColor": "darkblue"
                    }
                },
                "strokeDash": {
                    "field": "predicted",
                    "type": "nominal",
                    "legend": null
                },
                "tooltip": [
                    {
                        "field": "year",
                        "timeUnit": "year",
                        "title": "Property Construction Year"
                    },
                    {
                        "field": "price",
                        "type": "quantitative",
                        "title": "Average Property Price (USD)",
                        "format": ".0f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "color": "black",
                "fontSize": 12,
                "xOffset": 205,
                "yOffset": -140
            },
            "encoding": {
                "text": {
                    "value": "Estimated"
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    },
    "config": {
        "background": "#eaeaea"
    }
}