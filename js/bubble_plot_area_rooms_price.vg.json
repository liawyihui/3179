{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Property Prices vs Room Count vs Area by Country",
    "width": 575,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/min_price_by_country.csv"
    },
    "mark": {
        "type": "circle",
        "filled": true
    },
    "encoding": {
        "x": {
            "field": "area",
            "type": "quantitative",
            "title": "Total Area (m²)"
        },
        "y": {
            "field": "min_price_in_USD",
            "type": "quantitative",
            "title": "Minimum Property Price (USD)"
            
        },
        "size": {
            "field": "rooms",
            "type": "ordinal",
            "title": "Number of Rooms"
        },
        "color": {
            "field": "country",
            "type": "nominal",
            "title": "Country"
        },
        "tooltip": [
            {
                "field": "country",
                "title": "Country"
            },
            {
                "field": "area",
                "title": "Total Area (m²)"
            },
            {
                "field": "rooms",
                "title": "Number of Rooms"
            },
            {
                "field": "min_price_in_USD",
                "title": "Minimum Property Price (USD)"
            }
        ]
    }
}