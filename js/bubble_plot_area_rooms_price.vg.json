{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Property Prices vs Room Count vs Area by Country",
    "width": 575,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/min_price_by_country.csv"
    },
    "mark": {
        "type": "circle",
        "filled": true
    },
    "encoding": {
        "x": {
            "field": "area",
            "type": "quantitative",
            "title": "Total Area (m²)"
        },
        "y": {
            "field": "min_price_in_USD",
            "type": "quantitative",
            "title": "Property Price (USD)"
            
        },
        "size": {
            "field": "rooms",
            "type": "ordinal",
            "title": "Number of Rooms"
        },
        "color": {
            "field": "country",
            "type": "nominal",
            "title": "Country",
            "scale": {
                "domain": [
                    "Australia",
                    "Austria",
                    "Belarus",
                    "Croatia",
                    "Cyprus",
                    "Czechia",
                    "Finland",
                    "Georgia",
                    "Greece",
