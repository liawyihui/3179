{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Comparison of Minimum Property Prices, Rooms, and Area Across Countries",
        "fontSize": 26
    },
    "width": 999,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/min_price_by_country.csv"
    },
    "params": [
        {
            "name": "Property_Price",
            "value": 600000,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 600000,
                "step": 10000,
                "name": "Maximum Property Price: "
            }
        },
        {
            "name": "country_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Australia",
                    "Austria",
                    "Belarus",
                    "Croatia",
                    "Cyprus",
                    "Czechia",
                    "Finland",
                    "Georgia",
                    "Greece",
                    "Hungary",
                    "Indonesia",
                    "Italy",
                    "Latvia",
                    "Lithuania",
                    "Montenegro",
                    "N. Cyprus",
                    "Poland",
                    "Portugal",
                    "Russia",
                    "Serbia",
                    "Spain",
                    "Thailand",
                    "Turkey",
                    "United Arab Emirates",
                    "United States of America",
                    "Uzbekistan"
                ],
                "labels": [
                    "Show All",
                    "Australia",
                    "Austria",
                    "Belarus",
                    "Croatia",
                    "Cyprus",
                    "Czechia",
                    "Finland",
                    "Georgia",
                    "Greece",
                    "Hungary",
                    "Indonesia",
                    "Italy",
                    "Latvia",
                    "Lithuania",
                    "Montenegro",
                    "N. Cyprus",
                    "Poland",
                    "Portugal",
                    "Russia",
                    "Serbia",
                    "Spain",
                    "Thailand",
                    "Turkey",
                    "United Arab Emirates",
                    "United States of America",
                    "Uzbekistan"
                ],
                "name": "Country Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.min_price_in_USD < Property_Price"
        },
        {
            "filter": "country_selection == datum.country || country_selection == null"
        }
    ],
    "encoding": {
        "x": {
            "field": "area",
            "type": "quantitative",
            "title": "Total Area (m²)",
            "scale": {
                "domain": [
                    0,
                    120
                ]
            }
        },
        "y": {
            "field": "min_price_in_USD",
            "type": "quantitative",
            "title": "Property Price (USD)",
            "axis": {
                "tickCount": 3
            },
            "scale": {
                "type": "log",
                "domain": [
                    1000,
                    1000000
                ]
            }
        }
    },
    "layer": [
        {
            "params": [
                {
                    "name": "continent_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "continent"
                        ]
                    },
                    "bind": "legend"
                },
                {
                    "name": "size_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "rooms"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "rooms",
                    "type": "ordinal",
                    "title": "Number of Rooms",
                    "scale": {
                        "range": [
                            100,
                            1000,
                            10000
                        ]
                    }
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "title": "Continents",
                    "scale": {
                        "domain": [
                            "North America",
                            "Europe",
                            "Asia",
                            "Australia"
                        ],
                        "range": [
                            "#ff7f00",
                            "#4682B4",
                            "#800080",
                            "#a65628"
                        ]
                    }
                },
                "opacity": {
                    "condition": {
                        "test": {
                            "and": [
                                {
                                    "param": "continent_highlight"
                                },
                                {
                                    "param": "size_highlight"
                                }
                            ]
                        },
                        "value": 0.6
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {
                        "field": "country",
                        "title": "Country"
                    },
                    {
                        "field": "area",
                        "title": "Total Area (m²)",
                        "format": ",.0f"
                    },
                    {
                        "field": "rooms",
                        "title": "Number of Rooms"
                    },
                    {
                        "field": "min_price_in_USD",
                        "title": "Property Price (USD)",
                        "format": ",.0f"
                    },
                    {
                        "field": "continent",
                        "title": "Continent"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -15,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "(datum['country'] == 'Belarus' || datum['country'] == 'Australia' || datum['country'] == 'United Arab Emirates'|| datum['country'] == 'Turkey'|| datum['country'] == 'Finland'|| datum['country'] == 'Poland'|| datum['country'] == 'Austria'|| datum['country'] == 'Indonesia' || datum['country'] == 'Montenegro' || datum['country'] == 'Czechia' || datum['country'] == 'Spain' || country_selection == datum['country']) && (datum['country'] != 'United States of America' && datum['country'] != 'Cyprus')",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 142,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'United States of America'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 52,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Cyprus'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": -100,
                "dy": 20,
                "fontSize": 12,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {
                    "value": [
                        "Belarus has the lowest minimum property",
                        "price with 2 rooms and total area of 29 m²",
                        "among all the countries."
                    ]
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Belarus'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": -230,
                "dy": -50,
                "fontSize": 12,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {
                    "value": [
                        "Finland has the second highest minimum",
                        "property price with the most number",
                        "of rooms and second biggest total area",
                        "among all the countries."
                    ]
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['country'] == 'Finland' && continent_highlight",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "xOffset": -295,
                "yOffset": 270,
                "fontSize": 15,
                "fontWeight": "bold"
            },
            "transform": [
                {
                    "filter": "datum.country == 'Australia' && country_selection == null"
                }
            ],
            "encoding": {
                "text": {
                    "value": [
                        "There is a positive correlation between",
                        "the minimum property price, the number",
                        " of rooms and the total area of a property.",
                        "Countries with higher minimum property",
                        "prices tend to have properties with more",
                        "rooms and larger total area."
                    ]
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ],
    "config": {
        "background": "#faf4ff"
    }
}