{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Comparison of Minimum Property Prices, Room Count, and Area Across Countries",
    "width": 575,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/min_price_by_country.csv"
    },
    "params": [
        {
            "name": "Property_Price",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 500000,
                "step": 10000,
                "name": "Minimum Property Price: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.min_price_in_USD > Property_Price"
        }
    ],
    "encoding": {
        "x": {
            "field": "area",
            "type": "quantitative",
            "title": "Total Area (m²)"
        },
        "y": {
            "field": "min_price_in_USD",
            "type": "quantitative",
            "title": "Property Price (USD)"
        }
    },
    "layer": [
        {
            "params": [
                {
                    "name": "continent_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "continent"
                        ]
                    },
                    "bind": "legend"
                },
                {
                    "name": "size_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "rooms"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "rooms",
                    "type": "ordinal",
                    "title": "Number of Rooms",
                    "scale": {
                        "range": [
                            100,
                            1000,
                            10000
                        ]
                    }
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "title": "Continents",
                    "scale": {
                        "domain": [
                            "North America",
                            "Europe",
                            "Asia",
                            "Australia"
                        ],
                        "range": [
                            "#0000FF",
                            "#ff7f00",
                            "#984ea3",
                            "#a65628"
                        ]
                    }
                },
                "opacity": {
                    "condition": {
                        "test": {
                            "and": [
                                {
                                    "param": "continent_highlight"
                                },
                                {
                                    "param": "size_highlight"
                                }
                            ]
                        },
                        "value": 0.6
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {
                        "field": "country",
                        "title": "Country"
                    },
                    {
                        "field": "area",
                        "title": "Total Area (m²)"
                    },
                    {
                        "field": "rooms",
                        "title": "Number of Rooms"
                    },
                    {
                        "field": "min_price_in_USD",
                        "title": "Property Price (USD)"
                    },
                    {
                        "field": "continent",
                        "title": "Continent"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -15,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "(datum['country'] == 'Australia' || datum['country'] == 'United Arab Emirates'|| datum['country'] == 'Turkey'|| datum['country'] == 'Finland'|| datum['country'] == 'Poland'|| datum['country'] == 'Austria'|| datum['country'] == 'Indonesia' || datum['country'] == 'Montenegro' || datum['country'] == 'Czechia' || datum['country'] == 'Spain') && continent_highlight",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}