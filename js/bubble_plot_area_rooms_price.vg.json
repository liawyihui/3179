{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Property Bubble Plot",
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/world_real_estate.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "min",
                    "field": "price_in_USD",
                    "as": "min_price"
                }
            ],
            "groupby": [
                "country"
            ]
        }
    ],
    "mark": {
        "type": "circle",
        "filled": true
    },
    "encoding": {
        "x": {
            "field": "min_price",
            "type": "quantitative",
            "title": "Number of Rooms"
        },
        "y": {
            "field": "min_price",
            "type": "quantitative",
            "title": "Total Area (mÂ²)"
        },
        "size": {
            "field": "min_price",
            "type": "quantitative",
            "title": "Minimum Property Price (USD)"
        },
        "color": {
            "field": "country",
            "type": "nominal",
            "title": "Country"
        }
    }
}