{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_distribution.csv"
    },
    "vconcat": [
        {
            "title": {
                "text": "Property Listing Distribution in Countries",
                "fontSize": 26
            },
            "width": 755,
            "height": 300,
            "data": {
                "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_distribution.csv"
            },
            "params": [
                {
                    "name": "highlight",
                    "select": {
                        "type": "point",
                        "on": "mouseover"
                    }
                },
                {
                    "name": "selected_country",
                    "select": {
                        "type": "point",
                        "encodings": [
                            "y"
                        ]
                    }
                }
            ],
            "transform": [
                {
                    "filter": {
                        "field": "count",
                        "gte": 100
                    }
                },
                {
                    "filter": "datum.year == 'all'"
                }
            ],
            "mark": {
                "type": "bar",
                "fill": "darkblue",
                "stroke": "black",
                "cursor": "pointer"
            },
            "encoding": {
                "x": {
                    "field": "count",
                    "type": "quantitative",
                    "title": "Number of Listings"
                },
                "y": {
                    "field": "country",
                    "type": "nominal",
                    "title": "Country",
                    "sort": "-x"
                },
                "fillOpacity": {
                    "condition": {
                        "param": "selected_country",
                        "value": 1
                    },
                    "value": 0.3
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 1.5
                        }
                    ],
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Number of Listings",
                        "format": ",.0f"
                    }
                ]
            }
        },
        {
            "width": 755,
            "height": 100,
            "layer": [
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "selected_country",
                                "empty": false
                            }
                        },
                        {
                            "filter": "datum.year != 'all'"
                        }
                    ],
                    "mark": {
                        "type": "line",
                        "color": "darkblue",
                        "point": true
                    },
                    "encoding": {
                        "x": {
                            "field": "year",
                            "type": "ordinal",
                            "title": "Property Construction Year",
                            "axis": {
                                "labelAngle": 0,
                                "grid": false
                            }
                        },
                        "y": {
                            "field": "count",
                            "type": "quantitative",
                            "title": "Listings",
                            "axis": {
                                "grid": false
                            }
                        },
                        "tooltip": [
                            {
                                "field": "country",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "year",
                                "type": "ordinal",
                                "title": "Property Construction Year"
                            },
                            {
                                "field": "count",
                                "type": "quantitative",
                                "title": "Number of Listings",
                                "format": ",.0f"
                            }
                        ]
                    }
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "selected_country",
                                "empty": true
                            }
                        },
                        {
                            "filter": "datum.year != 'all'"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "color": "gray",
                        "fontSize": 20
                    },
                    "encoding": {
                        "text": {
                            "value": [
                                "Click on a country above."
                            ]
                        },
                        "opacity": {
                            "condition": {
                                "test": "datum.country != 'Russia' && datum.country != 'Turkey' && datum.country != 'Belarus' && datum.country != 'Hungary' && datum.country != 'Georgia' && datum.country != 'Spain' && datum.country != 'Greece' && datum.country != 'United Arab Emirates' && datum.country != 'Lithuania' && datum.country != 'Uzbekistan' && datum.country != 'Montenegro' && datum.country != 'N. Cyprus' && datum.country != 'Latvia' && datum.country != 'Thailand' && datum.country != 'United States of America' && datum.country != 'Croatia' && datum.country != 'Italy' && datum.country != 'Portugal' && datum.country != 'Poland' && datum.country != 'Austria'",
                                "value": 0.05
                            },
                            "value": 0
                        }
                    }
                }
            ]
        }
    ],
    "config": {
        "background": "#faf4ff",
        "scale": {
            "bandPaddingInner": 0.2
        }
    }
}