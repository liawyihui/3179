{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Property Price in Countries",
    "fontSize": 20
  },
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightskyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_graticules_30.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/data/aggregated_world_data.csv"
            },
            "key": "country",
            "fields": [
              "avg_price_usd"
            ]
          }
        },
        {
          "calculate": "datum.avg_price_usd",
          "as": "average_price_in_USD"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "average_price_in_USD",
          "type": "quantitative",
          "title": "Average Property Price(USD)",
          "scale": {
            "scheme": "oranges"
          },
          "legend": {
            "title": "Average Property Price(USD)",
            "orient": "right",
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "average_price_in_USD",
            "type": "quantitative",
            "title": "Average Property Price(USD)"
          }
        ]
      }
    }
  ]
}