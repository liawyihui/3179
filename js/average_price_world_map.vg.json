{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Average Property Price per Area in Countries",
    "fontSize": 26
  },
  "width": 1030,
  "height": 450,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "year_selection_checkbox",
      "value": "true",
      "bind": {
        "input": "checkbox",
        "name": "Disable/Enable year slider?"
      }
    },
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2028,
        "step": 1,
        "name": "Property Construction Year: "
      }
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "Europe",
          "Asia",
          "Australia"
        ],
        "labels": [
          "Show All",
          "North America",
          "Europe",
          "Asia",
          "Australia"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightskyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_graticules_30.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "darkgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_price_per_meter_sq.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.average_price/datum.average_area",
          "as": "average_price_per_area"
        },
        {
          "filter": "((year_selection_checkbox && datum.building_construction_year == year_selection) || (!year_selection_checkbox && datum.building_construction_year == 'All years')) && (continent_selection == datum.continent || continent_selection == null)"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "average_price_per_area",
          "type": "quantitative",
          "title": "Average Property Price(USD)",
          "scale": {
            "type": "threshold",
            "domain": [
              2000,
              3000,
              4000,
              5000,
              6000,
              7000,
              8000,
              9000,
              10000,
              20000
            ],
            "scheme": "oranges"
          },
          "legend": {
            "title": "Property Price(USD) per m²",
            "orient": "right",
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "average_price_per_area",
            "type": "quantitative",
            "title": "Property Price(USD) per m²",
            "format": ",.0f"
          },
          {
            "field": "building_construction_year",
            "type": "nominal",
            "title": "Property Construction Year"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": [
              "latitude",
              "longitude"
            ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight": "bold"
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "text": {
          "field": "properties.NAME",
          "type": "nominal"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'Turkey' || datum['properties.NAME'] == 'Thailand' || datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'Indonesia' ||  datum['properties.NAME'] == 'Turkey' ||  datum['properties.NAME'] == 'United States of America' ||  datum['properties.NAME'] == 'Russia' ||  datum['properties.NAME'] == 'Spain' ||  datum['properties.NAME'] == 'Finland'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontWeight": "bold",
        "dx": 10,
        "dy": 0,
        "xOffset": 80,
        "yOffset": -90,
        "align": "left"
      },
      "encoding": {
        "text": {
          "field": "properties.NAME",
          "type": "nominal"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'United Arab Emirates' && year_selection == 2018",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 12,
        "dx": 10,
        "dy": 0,
        "xOffset": 30,
        "yOffset": -70,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "For the property construction year",
            "of 2018, United Arab Emirates",
            "achieved the highest average",
            "price per meter square of ",
            "approximately 27,526 USD among",
            "all the years and countries."
          ]
        },
        "opacity": {
          "condition": {
            "test": "year_selection == 2018",
            "value": 0.05
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 12,
        "dx": 10,
        "dy": 0,
        "xOffset": 120,
        "yOffset": 90,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "In the property construction year",
            "of 2025, Australia is expected to",
            "achieve highest average price per",
            "meter square of 4,658 USD in the",
            "country."
          ]
        },
        "opacity": {
          "condition": {
            "test": "year_selection == 2025",
            "value": 0.02
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 12,
        "dx": 10,
        "dy": -30,
        "xOffset": -400,
        "yOffset": 0,
        "align": "left"
      },
      "encoding": {
        "text": {
          "value": [
            "The average price per",
            "meter square in most countries",
            "excluding the United Arab",
            "Emirates gradually increased",
            "for property constructed",
            "between 2010 and 2019.",
            "",
            "For the properties built after 2019,",
            "the average price per meter square ",
            "in most countries began to decrease.",
            "This change could be due to the",
            "COVID-19 pandemic which",
            "occured between 2019 and 2023."
          ]
        },
        "opacity": {
          "value": 0.02
        }
      }
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        },
        "opacity": {
          "value": 0
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_price_per_meter_sq.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.average_price/datum.average_area",
          "as": "average_price_per_area"
        },
        {
          "filter": "((year_selection_checkbox && datum.building_construction_year == year_selection) || (!year_selection_checkbox && datum.building_construction_year == 'All years')) && (continent_selection == datum.continent || continent_selection == null)"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "average_price_per_area",
          "type": "quantitative",
          "title": "Average Property Price(USD)",
          "scale": {
            "type": "threshold",
            "domain": [
              2000,
              3000,
              4000,
              5000,
              6000,
              7000,
              8000,
              9000,
              10000,
              20000
            ],
            "scheme": "oranges"
          },
          "legend": {
            "title": "Property Price(USD) per m²",
            "orient": "right",
            "titleFontSize": 12
          }
        },
        "opacity": {
          "value": 0
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "average_price_per_area",
            "type": "quantitative",
            "title": "Property Price(USD) per m²",
            "format": ",.0f"
          },
          {
            "field": "building_construction_year",
            "type": "nominal",
            "title": "Property Construction Year"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "background": "#faf4ff"
  }
}