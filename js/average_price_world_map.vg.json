{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Property Price Per Area in Countries",
    "fontSize": 20
  },
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2027,
        "step": 1,
        "name": "Property Construction Year: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightskyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_graticules_30.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_price_per_meter_sq.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.average_price/datum.average_area",
          "as": "average_price_in_USD"
        },
        {
          "filter": "datum.building_construction_year == year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "average_price_in_USD",
          "type": "quantitative",
          "title": "Average Property Price(USD)",
          "scale": {
            "scheme": "oranges"
          },
          "legend": {
            "title": [
              "Property Price(USD)",
              "per m²"
            ],
            "orient": "right",
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "average_price_in_USD",
            "type": "quantitative",
            "title": "Property Price(USD) per m²",
            "format": ".0f"
          }
        ]
      }
    }
  ]
}