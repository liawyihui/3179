{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Property Price per Area in Countries",
    "fontSize": 20
  },
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "year_selection_checkbox",
      "value": "true",
      "bind": {
        "input": "checkbox",
        "name": "Disable/Enable year slider?"
      }
    },
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2027,
        "step": 1,
        "name": "Property Construction Year: "
      }
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "Europe",
          "Asia",
          "Australia"
        ],
        "labels": [
          "Show All",
          "North America",
          "Europe",
          "Asia",
          "Australia"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightskyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/js/ne_110m_graticules_30.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "darkgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/FIT3179_Assignment2/main/data/property_price_per_meter_sq.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/liawyihui/3179/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.average_price/datum.average_area",
          "as": "average_price_in_USD"
        },
        {
          "filter": "((year_selection_checkbox && datum.building_construction_year == year_selection) || (!year_selection_checkbox && datum.building_construction_year == 'All years')) && (continent_selection == datum.continent || continent_selection == null)"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "average_price_in_USD",
          "type": "quantitative",
          "title": "Average Property Price(USD)",
          "scale": {
            "type": "threshold",
            "domain": [
              1000,
              2000,
              3000,
              4000,
              6000,
              10000,
              20000
            ],
            "scheme": "oranges"
          },
          "legend": {
            "title": "Property Price(USD) per m²",
            "orient": "right",
            "titleFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "average_price_in_USD",
            "type": "quantitative",
            "title": "Property Price(USD) per m²",
            "format": ".0f"
          },
          {
            "field": "building_construction_year",
            "type": "nominal",
            "title": "Property Construction Year"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}