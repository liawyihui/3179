{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Property Distribution in Countries"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/liawyihui/3179/main/FIT3179_Assignment2/data/aggregated_world_data.csv"
    },
    "transform": [
        {
            "filter": {"field": "count", "gte": 100}
        }
    ],
    "mark": {
        "type": "bar",
        "color": "orange"
    },
    "encoding": {
        "x": {
            "field": "count",
            "type": "quantitative",
            "title": "Number of Listings"
        },
        "y": {
            "field": "country",
            "type": "nominal",
            "title": "Country",
            "sort":"-x"
        },
        "tooltip": [  
            {"field": "count", "type": "quantitative", "title": "Number of Listings"},
            {"field": "country", "type": "nominal", "title": "Country"}
        ]
    }
}