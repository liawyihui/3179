{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Property Price (USD) by Country",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "../data/world_real_estate2.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "lookup": "country",
        "from": {
          "data": {
            "url": "ne_110m.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "key": "properties.NAME"
        },
        "as": "geo"
      },
      {
        "aggregate": [
          {"op": "mean", "field": "price_in_USD", "as": "average_price"}
        ],
        "groupby": ["country"]
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "average_price",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "average_price", "type": "quantitative", "title": "Average Property Price (USD)"}
      ]
    }
  }